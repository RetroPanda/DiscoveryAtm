package com.discovery.bank.service;

import java.util.ArrayList;
import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.discovery.bank.model.ClientAccount;
import com.discovery.bank.repo.AtmRepository;

@Service
public class AtmService {
	@Autowired
	AtmRepository repository;
	
	public void getAllAccounts() {
		List<ClientAccount> accounts = new ArrayList<ClientAccount>();
		repository.findAll().forEach((account) -> accounts.add(account));	
	       
	}

}

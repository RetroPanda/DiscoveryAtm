package com.discovery.bank.controller;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.ui.Model;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.ResponseBody;

import com.discovery.bank.model.ClientAccount;
import com.discovery.bank.repo.AtmRepository;
import com.discovery.bank.service.AtmService;

@Controller
public class AtmController {
	
	@Autowired
	AtmService atmService;
	
	@RequestMapping("/")
    public String homePage(Model model) { 	
    //	model.addAttribute("name", name);
        model.addAttribute("appName", "ELLO ");
        return "home";
    }
	
	@RequestMapping("/accounts")
	@ResponseBody
    public String getAccounts(Model model) { 	
    //	model.addAttribute("name", name);
      //  model.addAttribute("appName", "ELLO ");
		List<ClientAccount> accounts = atmService.getAllAccounts();
		model.addAttribute("accounts", accounts);
		 return "currency";
    }
}
